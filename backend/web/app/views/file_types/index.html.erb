<p id="notice"><%= notice %></p>

<h1>File Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @file_types.each do |file_type| %>
      <tr>
        <td><%= file_type.name %></td>
        <td><%= file_type.description %></td>
        <td><%= link_to 'Show', file_type %></td>
        <td><%= link_to 'Edit', edit_file_type_path(file_type) %></td>
        <td><%= link_to 'Destroy', file_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

