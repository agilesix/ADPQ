<p id="notice"><%= notice %></p>

<h1>Workflow Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflow_types.each do |workflow_type| %>
      <tr>
        <td><%= workflow_type.name %></td>
        <td><%= workflow_type.description %></td>
        <td><%= link_to 'Show', workflow_type %></td>
        <td><%= link_to 'Edit', edit_workflow_type_path(workflow_type) %></td>
        <td><%= link_to 'Destroy', workflow_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

