<p id="notice"><%= notice %></p>

<h1>Workflow Steps</h1>

<table>
  <thead>
    <tr>
      <th>Workflow</th>
      <th>Name</th>
      <th>Description</th>
      <th>String</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @workflow_steps.each do |workflow_step| %>
      <tr>
        <td><%= workflow_step.workflow %></td>
        <td><%= workflow_step.name %></td>
        <td><%= workflow_step.description %></td>
        <td><%= workflow_step.string %></td>
        <td><%= link_to 'Show', workflow_step %></td>
        <td><%= link_to 'Edit', edit_workflow_step_path(workflow_step) %></td>
        <td><%= link_to 'Destroy', workflow_step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Workflow Step', new_workflow_step_path %>
